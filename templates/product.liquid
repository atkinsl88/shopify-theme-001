<h1>{{ product.title }}</h1>
<img src="{{ product | image_url: width: 400 }}"/>
<p>{{ product.price | money }}</p>
<p>{{ product.description }}</p>

{% form 'product', product %}
  <select name="id">
    {% for variant in product.variants %}
      <option value={{ variant.id }}>
        {{ variant.title }}
      </option>
    {% endfor %}
  </select>

  <button type="submit">Add to cart</button>
{% endform %}