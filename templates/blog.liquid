{% paginate blog.articles by 20 %}

<div class="hero-banner container">
  <h1>{{ blog.title }}</h1>
</div>

<div class="container">
  {% for article in blog.articles %}

    <div>
      <a href="{{ article.url }}">
        <h2>{{ article.title }}</h2>
        <p>{{ article.author }}</p>
      </a>
    </div>

  {% enfor %}

</div>

  {{ paginate | default_pagination }}
{% endpaginate %}